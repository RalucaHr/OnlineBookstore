@model DTA.Entities.Book

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Main content -->
<section class="content">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <br />
                        <h1>Books Details</h1>
                        <br />
                    </div>
                    <div class="card-body">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm">
                                    <a href=""><img src="@Url.Content(Model.Cover)" width="240" height="320" ></a>
                                </div>
                                <div class="col-sm">
                                    <dl class="dl-horizontal">

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Title)
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.Title)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Price)
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.Price)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Author)
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.Author.FirstName) @Html.DisplayFor(model => model.Author.LastName)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Category)
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.Category.Title)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Language)
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.Language)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.YearPublished)
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.YearPublished)
                                        </dd>


                                        <dt>
                                            @Html.DisplayNameFor(model => model.ISBN)
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.ISBN)
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-sm">
                                    <dl>
                                        <dt>
                                            @Html.DisplayNameFor(model => model.Description)
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.Description)
                                        </dd>
                                    </dl>
                                    <hr class="style2" style="border-top:3px double #8c8b8b">
                                    <dl class="dl-horizontal">
                                        <dt>
                                            @Html.DisplayNameFor(model => model.DateCreated)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.DateCreated)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.DateModified)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.DateModified)
                                        </dd>
                                     </dl">
                                        <br />

                                        <p>
                                            @Html.ActionLink("Edit", "Edit", new { id = Model.BookId }) |
                                            @Html.ActionLink("Back to List", "AdminIndex", "Books")
                                        </p>
                                </div>

                            </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>
<!-- /.content -->
